<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#0E0E0E">

<!-- زر الفلاش (بالنص تمامًا) -->
<ImageButton
android:id="@+id/btnFlash"
android:layout_width="150dp"
android:layout_height="150dp"
android:background="@drawable/flash_button_bg"
android:src="@drawable/ic_flash"
android:tint="#FFFFFF"
android:contentDescription="Flash Button"
app:layout_constraintTop_toTopOf="parent"
app:layout_constraintBottom_toBottomOf="parent"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintEnd_toEndOf="parent"/>

<!-- عنوان التطبيق -->
<TextView
android:id="@+id/title"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Flashlyx"
android:textSize="30sp"
android:textStyle="bold"
android:textColor="#FFFFFF"
app:layout_constraintBottom_toTopOf="@id/btnFlash"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintEnd_toEndOf="parent"
android:layout_marginBottom="24dp"/>

<!-- حالة الفلاش -->
<TextView
android:id="@+id/statusText"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="OFF"
android:textColor="#AAAAAA"
android:textSize="18sp"
app:layout_constraintTop_toBottomOf="@id/btnFlash"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintEnd_toEndOf="parent"
android:layout_marginTop="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>